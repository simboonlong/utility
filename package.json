{
  "name": "@simboonlong/utility",
  "version": "0.9.0",
  "description": "Some web utility functions to use.",
  "homepage": "https://github.com/simboonlong/utility",
  "repository": {
    "type": "git",
    "url": "https://github.com/simboonlong/utility.git"
  },
  "license": "MIT",
  "author": "Sim Boon Long",
  "main": "dist/es6/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "run-p serve 'pug -- --watch' 'ts:watch'",
    "serve": "npx http-server -p 3000",
    "images": "cpy './demo/**/*.(jpg|png|svg)' './public'",
    "pug": "pug demo --basedir ./ --obj demo/data.json --out public --pretty",
    "demo": "run-s pug images build",
    "e2e": "cypress open",
    "e2e:ci": "cypress run",
    "lint": "eslint ./src/*.ts",
    "test": "jest ./test/*",
    "test:single": "jest --watch",
    "webpack:bundle": "webpack --config webpack.config.js",
    "ts": "tsc --project tsconfig.json",
    "ts:watch": "tsc-watch --onSuccess 'npm run build'",
    "build": "run-s ts webpack:bundle",
    "prep": "run-s lint test e2e:ci",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.1",
    "@testing-library/cypress": "^8.0.3",
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "cpy-cli": "^4.2.0",
    "cypress": "^10.8.0",
    "eslint": "^8.24.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
